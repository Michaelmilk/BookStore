@model BookStore_v2.Models.Book

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div ng-controller="createCtrl">
    <form name="myForm" ng-submit="vm.bookSubmit()" novalidate>
        <div class="form-horizontal">
            <h4>Book</h4>

            <book-info opts="opts" book="book"></book-info>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" ng-disabled="myForm.$invalid" />
                </div>
            </div>
        </div>
    </form>
    
</div>
<div>
    @Html.ActionLink("Back to Home", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
