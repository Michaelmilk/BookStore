@model IEnumerable<BookStore_v2.Models.Book>
@{
    ViewBag.Title = "Home Page";
}


<style>

th {
    cursor: pointer;
}

td.clk:hover {
             color: blue;
             cursor: pointer;
             text-decoration:underline
         }

a.clk:hover {
             color: blue;
             cursor: pointer;
             text-decoration:underline
